{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.8" }
    }
  ],
  "build": {
    "env": {
      "PIP_NO_CACHE_DIR": "false"
    },
    "install": "apt-get update && apt-get install -y libxml2-dev libxslt-dev && pip install --upgrade -r requirements.txt"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.py"
    }
  ]
}
